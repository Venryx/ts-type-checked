{
  "name": "@ts-type-checked/root",
  "private": true,
  "version": "0.5.0",
  "description": "Type checking utilities for TypeScript.",
  "scripts": {
    "build": "yarn workspaces run build",
    "watch": "yarn workspaces run watch",
    "clean": "yarn workspaces run clean",
    "test": "yarn workspaces run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janjakubnanista/ts-type-checked.git"
  },
  "keywords": [
    "TypeScript",
    "type checking",
    "type checks",
    "duck typing",
    "type guards"
  ],
  "author": "Jan Jakub Nanista <jan.jakub.nanista@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/janjakubnanista/ts-type-checked/issues"
  },
  "homepage": "https://github.com/janjakubnanista/ts-type-checked#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5"
  },
  "workspaces": [
    "main",
    "test",
    "examples"
  ],
  "peerDependencies": {
    "typescript": "^2.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}(x)?": [
      "eslint --fix"
    ]
  }
}
